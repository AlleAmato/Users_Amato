<Window x:Class="UsersAdo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsersAdo"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Margin="10" Click="DropTables_Click">Cancellazione Tabelle</Button>
        <Button Grid.Column="0" Grid.Row="1" Margin="10" Click="CreateTables_Click">Crezione Tabelle</Button>
        <Button Grid.Column="0" Grid.Row="2" Margin="10" Click="DeleteFromTables_Click">Cancellazione dati in Tabelle</Button>
        <Button Grid.Column="0" Grid.Row="3" Margin="10" Click="LoadDataOnTables_Click">Caricamento dati in Tabelle</Button>
    </Grid>
</Window>
